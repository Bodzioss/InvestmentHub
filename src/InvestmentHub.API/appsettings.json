{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.OpenTelemetry"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore.HealthChecks": "Error",
        "System": "Warning",
        "System.Net.Http.HttpClient": "Warning",
        "Npgsql": "Warning",
        "Marten": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/investmenthub-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ]
  },
  "Application": {
    "Name": "InvestmentHub API",
    "Version": "1.0.0",
    "Environment": "Development",
    "EnableDetailedErrors": true,
    "EnableSwagger": true
  },
  "Seq": {
    "ServerUrl": "http://localhost:5341"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=InvestmentHub;Username=postgres;Password=postgres",
    "postgres": "Host=localhost;Database=InvestmentHub;Username=postgres;Password=postgres;Include Error Detail=true",
    "redis": "localhost:6379"
  },
  "RabbitMQ": {
    "ConnectionString": "amqp://guest:guest@localhost:5672/"
  },
  "Resilience": {
    "Retry": {
      "MaxRetryAttempts": 3,
      "InitialDelaySeconds": 1,
      "MaxDelaySeconds": 10,
      "BackoffMultiplier": 2
    },
    "CircuitBreaker": {
      "FailureThreshold": 5,
      "DurationOfBreakSeconds": 30,
      "MinimumThroughput": 10
    },
    "Timeout": {
      "DatabaseTimeoutSeconds": 30,
      "CacheTimeoutSeconds": 5,
      "ApiTimeoutSeconds": 10
    }
  },
  "MarketData": {
    "Cache": {
      "PriceTTLMinutes": 15,
      "HistoryTTLHours": 24,
      "SecurityInfoTTLDays": 7
    },
    "BackgroundJobs": {
      "ActivePricesIntervalMinutes": 15,
      "AllPricesIntervalMinutes": 60,
      "HistoricalDataIntervalHours": 24
    }
  },
  "HealthChecks": {
    "Enabled": true,
    "EvaluationIntervalSeconds": 30
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "SuperSecretKey12345678901234567890",
    "Issuer": "InvestmentHub",
    "Audience": "InvestmentHub"
  },
  "Gemini": {
    "ApiKey": ""
  }
}